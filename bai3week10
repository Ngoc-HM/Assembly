.eqv HEADING 0xffff8010 # Integer: An angle between 0 and 359
 # 0 : North (up)
 # 90: East (right)
# 180: South (down)
# 270: West (left)
.eqv MOVING 0xffff8050 
.eqv LEAVETRACK 0xffff8020
.eqv WHEREX 0xffff8030 
.eqv WHEREY 0xffff8040 
.text 
main: jal TRACK #váº½ Ä‘Æ°á»?ng 
 addi $a0, $zero, 90 # xoay 90 Ä‘á»™ r cháº¡y
 jal ROTATE
 jal GO
sleep1: addi $v0,$zero,32 #deslay thá»?i gian 
 li $a0,1000 
 syscall
 
 jal UNTRACK # giá»¯a nguyÃªn
 jal TRACK # váº½ Ä‘Æ°á»?ng má»›i
goDOWN: addi $a0, $zero, 180 # xoay 180 Ä‘á»™ 
 jal ROTATE
 
sleep2: addi $v0,$zero,32 # tiáº¿p tá»¥c cháº¡y deslay 2s
 li $a0,2000 
 syscall
 jal UNTRACK # giá»¯ nguyÃªn 
 jal TRACK # vÃ  váº½ Ä‘Æ°á»?ng theo dÃµi má»›i
goLEFT: addi $a0, $zero, 270 # xoay 270 Ä‘á»™
 jal ROTATE
 
sleep3: addi $v0,$zero,32 # deslay 1s 
 li $a0,1000 
 syscall
 jal UNTRACK # giá»¯ nguyÃªn
 jal TRACK # váº½ Ä‘Æ°á»?ng má»›i 
 
goASKEW:addi $a0, $zero, 120 # xoay 120 Ä‘á»™
 jal ROTATE 
 
sleep4: addi $v0,$zero,32 # deslay 2s 
 li $a0,2000 
 syscall 
 
 jal UNTRACK # giá»¯ nguyÃªn
 jal TRACK # váº½ dÃ²ng má»›i
 
end_main:

GO: li $at, MOVING # change MOVING port
 addi $k0, $zero,1 # to logic 1,
 sb $k0, 0($at) # to start running
 jr $ra

STOP: li $at, MOVING # change MOVING port to 0
 sb $zero, 0($at) # to stop
 jr $ra

TRACK: li $at, LEAVETRACK # change LEAVETRACK port
 addi $k0, $zero,1 # to logic 1,
 sb $k0, 0($at) # to start tracking
 jr $ra

UNTRACK:li $at, LEAVETRACK # change LEAVETRACK port to 0
 sb $zero, 0($at) # to stop drawing tail
 jr $ra

ROTATE: li $at, HEADING # change HEADING port
 sw $a0, 0($at) # to rotate robot
 jr $ra

